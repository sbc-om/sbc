# =============================================
# SBC — Environment Variables Template
# =============================================
# Copy to .env and fill in your values.
# See .env.production.example for production-specific settings.
# =============================================

# ── Core / URLs ──────────────────────────────
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000
PUBLIC_URL=http://localhost:3000
PORT=3000

# ── Database ─────────────────────────────────
DB_PROVIDER=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sbc

# ── Auth / Session ───────────────────────────
AUTH_JWT_SECRET=change-me-to-a-long-random-string

# ── First Admin (seed / first-boot) ─────────
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me

# ── Database Encryption ──────────────────────
# Generate with: node scripts/generate-encryption-key.js
DB_ENCRYPTION_KEY=change-me-to-a-very-long-random-encryption-key-at-least-32-characters
DB_ENCRYPTION_ENABLED=false

# ── Backup ───────────────────────────────────
BACKUP_PATH=.data/backups

# ── Social Links (shown in Footer) ──────────
# The app reads FACEBOOK and TWITTER. Instagram is hardcoded.
NEXT_PUBLIC_SOCIAL_FACEBOOK=
NEXT_PUBLIC_SOCIAL_TWITTER=

# ── Web Push (VAPID) ────────────────────────
# Generate with: pnpm generate-vapid
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@example.com

# ── Google Wallet ────────────────────────────
GOOGLE_WALLET_ENABLED=false
GOOGLE_ISSUER_ID=
GOOGLE_SA_JSON=./certs/google-credentials.json
GOOGLE_WALLET_PUBLIC_LOGO_URL=

# ── Apple Wallet ─────────────────────────────
APPLE_WALLET_ENABLED=false
APPLE_TEAM_ID=
APPLE_PASS_TYPE_ID=
APPLE_CERT_PATH=./certs/pass.p12
APPLE_CERT_PASSWORD=
APPLE_WWDR_PATH=./certs/wwdr.pem
APPLE_WALLET_WEB_SERVICE_URL=http://localhost:3000/api/wallet/apple

# ── WAHA (WhatsApp) ─────────────────────────
WAHA_ENABLED=false
WAHA_API_URL=
WAHA_SESSION=
WAHA_API_KEY=
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3

# ── APNs Push ────────────────────────────────
APPLE_APNS_AUTH_KEY_P8_PATH=./certs/AuthKey_KDP29L8J65.p8
APPLE_APNS_KEY_ID=
APNS_SANDBOX=true
