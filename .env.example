# Copy to .env and fill values

# Auth/session
AUTH_JWT_SECRET=change-me-to-a-long-random-string

# Optional: bootstrap first admin on first run
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me

# LMDB storage path
LMDB_PATH=.data/lmdb

# --- Public URLs ---
# Public HTTPS base URL for your deployment (required for Google Wallet)
# Examples: https://yourdomain.com, https://app.yourdomain.com
NEXT_PUBLIC_SITE_URL=

# --- Web Push (VAPID) ---
# Generate once and set both keys (used for customer push notifications).
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
# e.g. mailto:admin@example.com
VAPID_SUBJECT=

# --- Wallet integration (optional) ---
# Apple Wallet (PassKit)
APPLE_WALLET_ENABLED=false
APPLE_PASS_TYPE_IDENTIFIER=pass.com.example.sbc.loyalty
APPLE_TEAM_IDENTIFIER=YOUR_TEAM_ID
APPLE_ORGANIZATION_NAME=SBC

# Used for the Apple Wallet web service (device registrations + push updates)
APPLE_WEB_SERVICE_URL=https://your-domain.example.com/api/apple-wallet
APPLE_AUTH_TOKEN=change-me

# Signing certificates (PEM files). Required to generate a valid .pkpass.
APPLE_SIGNER_CERT_PEM_PATH=
APPLE_SIGNER_KEY_PEM_PATH=
APPLE_SIGNER_KEY_PASSPHRASE=
APPLE_WWDR_CERT_PEM_PATH=

# APNs (required for Wallet-style update alerts)
# If not set, passes can still be generated/installed, but users won't receive update alerts.
APPLE_APNS_ENV=production # or sandbox
APPLE_APNS_AUTH_KEY_P8_PATH=
APPLE_APNS_KEY_ID=

# Google Wallet
GOOGLE_WALLET_ENABLED=false
GOOGLE_WALLET_ISSUER_ID=
GOOGLE_WALLET_SERVICE_ACCOUNT_EMAIL=
# Private key must be a PKCS#8 PEM string. In .env use \n escapes, e.g.
# GOOGLE_WALLET_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n"
GOOGLE_WALLET_PRIVATE_KEY=
# Alternatively, provide the entire service account JSON (and omit *_EMAIL / *_PRIVATE_KEY).
GOOGLE_WALLET_SERVICE_ACCOUNT_JSON=
# Or point to the service account JSON file (codelab-style):
# - GOOGLE_WALLET_SERVICE_ACCOUNT_JSON_PATH=/abs/path/to/service-account.json
# - or set GOOGLE_APPLICATION_CREDENTIALS=/abs/path/to/service-account.json
