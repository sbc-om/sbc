# Auth/session
AUTH_JWT_SECRET=change-me-to-a-long-random-string

# Optional: bootstrap first admin on first run
ADMIN_EMAIL=admin@example.om
ADMIN_PASSWORD=change---me

# LMDB storage path (relative to project root is OK)
LMDB_PATH=.data/lmdb

# Database encryption (AES-256-GCM)
# Generate a strong key with: node -e "console.log(require('crypto').randomBytes(64).toString('base64url'))"
DB_ENCRYPTION_KEY=change-me-to-a-very-long-random-encryption-key-at-least-32-characters
DB_ENCRYPTION_ENABLED=true

# Backup storage path
BACKUP_PATH=.data/backups

